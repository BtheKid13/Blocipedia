  <h1><%= @topic.title %></h1>

  <div class="container">

  <div class="row">
    <div class="col-md-8">
      <p class="lead">
        <%= @topic.body %>
      </p>
      <% @topic.wikis.each do |wiki| %>
      <div class="media">
        <div class="media-body">
          <h4 class="media-heading">
            <%= link_to wiki.title, topic_wiki_path(@topic, wiki) %>
          </h4>
          <small>
             submitted <%= time_ago_in_words(wiki.created_at) %> ago <br>
           </small>
        </div>
      </div>
      <% end %>
    </div>

    <div class="col-md-4">
      <%= link_to "New Wiki", new_topic_wiki_path(@topic), class: 'btn btn-success' %>
      <%= link_to "Edit Topic", edit_topic_path, class: 'btn btn-success' %>
      <%= link_to "Delete Topic", @topic, method: :delete, class: 'btn btn-danger' %>
    </div>
  </div>
</div>
